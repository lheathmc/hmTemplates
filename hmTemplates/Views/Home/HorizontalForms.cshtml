@{
    ViewData["Title"] = "Horizontal Forms";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>
<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#single">1 Column Form</a></li>
    <li><a data-toggle="tab" href="#double">2 Column Form</a></li>
</ul>
<div class="tab-content">
    <div id="single" class="tab-pane fade in active">
        <h4>Horizontal Single Column Form</h4>
        <div class="row">
            <div class="col-sm-10 col-md-8">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="email">Short Label:</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" placeholder="Placeholder" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4">Medium Label:</label>
                        <div class="col-sm-8">
                            <input class="form-control" placeholder="Readonly" readonly />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="pwd">Very Long Label:</label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control" placeholder="Placeholder" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" />Checkbox label goes here
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-primary">SubmitButton</button>
                            <button type="submit" class="btn btn-cancel">CancelButton</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="double" class="tab-pane fade">
        <h4>Form Section Header</h4>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="email">Label:</label>
                        <div class="col-sm-9">
                            <input type="email" class="form-control" placeholder="Placeholder" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Label:</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" placeholder="Placeholder" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="" />Option 1
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="" />Option 2
                                </label>
                            </div>
                            <div class="checkbox disabled">
                                <label>
                                    <input type="checkbox" value="" disabled />Option 3
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="well">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-3">Medium Label:</label>
                            <div class="col-sm-9">
                                <input class="form-control" placeholder="Placeholder" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Label:</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <div class="radio">
                                    <label class="radio-inline">
                                        <input type="radio" name="optradio">Option 1
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="optradio">Option 2
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" name="optradio">Option 3
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-8 col-md-6">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-md-offset-3 col-sm-9">
                        <button type="submit" class="btn btn-primary">SubmitButton</button>
                        <button type="submit" class="btn btn-cancel">CancelButton</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>